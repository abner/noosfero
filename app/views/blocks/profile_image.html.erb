<div class="vcard">

  <% if block.title.present? %>
    <p><%= block.title %></p>
  <% end %>

  <style>
    #change-image-profile-label-outer {
      height: 21px;
      position: relative;
      overflow: hidden;
      width: 100%;
      margin-top: -28px;
      background-color: rgba(128,128,128,0.60);
      padding-top: 7px;
    }

    #change-image-profile-label-inner {
      vertical-align: middle;
    }

    #change-image-profile-label-outer a {
      color: #FFF;
      text-decoration: none;
    }
  </style>

  <!-- Photo / Image -->
  <div class="profile-big-image">
    <div class="profile-big-image-inner1">
      <!--span class="profile-big-image-inner2"-->
        <%= link_to profile_image(block.owner, :big) +"\n", profile.url %>
      <!--/span-->
    </div>

    <% if !user.nil? and user.has_permission?('edit_profile', profile) %>
    <div id="change-image-profile-label-outer">
      <div id="change-image-profile-label-inner">
        <span><%= link_to _('Change image'), {:controller => 'profile_editor', :action => 'change_profile_image' }, :class => "colorbox", :title => _('Change image') %></span>
      </div>
    </div>
    <% end %>

  </div>

  <br />

  <% if show_name %>
    <p><%= h block.owner.short_name %></p>
  <% end %>

  <% if !user.nil? and user.has_permission?('edit_profile', profile) %>
    <div class='admin-link'>
      <%= link_to _('Control panel'), block.owner.admin_url %>
    </div>
  <% end %>

  <div class="profile-info-options">
    <%= render_profile_actions block.owner.class %>
  </div>

</div>
